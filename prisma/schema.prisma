generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  name  String
  image String
  Calls Calls[]
}

model Client {
  id              String @id @default(uuid())
  companyName     String
  taxIdentifier   String
  tradeName       String
  phone           String
  memo            String
  generatedStatus String // SITUAÇÃO: Pendente, validação ou enviado
  regimeList      String // TIPO: Real, simples, avulso ou presumido
}

//TODO: Fazer com que os clientes possam ser direcionados para um usuario

model Calls {
  id          String @id @default(uuid())
  title       String
  description String
  createdDate String
  closedDate  String
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}
